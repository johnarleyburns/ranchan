<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chanapps.ranchan.app" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
            android:name="com.chanapps.ranchan.app.application.RanchanApplication"
            >
        <activity
            android:name=".controllers.ThreadListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controllers.ThreadDetailActivity"
            android:label="@string/title_thread_detail"
            android:parentActivityName=".controllers.ThreadListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.chanapps.ranchan.app.ThreadListActivity" />
        </activity>
    </application>

</manifest>
