<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <EditText
            android:id="@+id/thread_text"
            android:inputType="textImeMultiLine|textAutoComplete|textMultiLine|textLongMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/thread_outer"
            android:layout_marginLeft="@dimen/thread_outer"
            android:layout_marginRight="@dimen/thread_outer"
            android:layout_marginBottom="@dimen/thread_outer"
            android:hint="@string/text" />
</LinearLayout>