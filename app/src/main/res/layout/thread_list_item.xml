<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/thread_list_item"
             android:layout_width="match_parent"
    android:layout_height="@dimen/thread_height"
    >

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/thread_list_item_thumb"
        android:layout_width="@dimen/thread_height"
        android:layout_height="@dimen/thread_height"
        android:scaleType="centerCrop"
        />

    <TextView android:id="@+id/thread_list_item_content"
              android:layout_width="match_parent"
              android:layout_height="@dimen/thread_height"
              android:textAppearance="?android:attr/textAppearanceListItemSmall"
              android:paddingLeft="@dimen/thread_outer"
              android:paddingRight="@dimen/thread_inner"
              android:paddingTop="@dimen/thread_inner"
              android:paddingBottom="@dimen/thread_inner"
              android:background="?android:attr/activatedBackgroundIndicator"
              android:maxLines="@integer/thread_lines"
              android:layout_marginLeft="@dimen/thread_height"
              android:layout_marginRight="@dimen/thread_right"
              android:textSize="@dimen/thread_content"
            />

    <TextView android:id="@+id/thread_list_item_date"
              android:layout_width="@dimen/thread_right"
              android:layout_height="@dimen/thread_half"
              android:paddingRight="@dimen/thread_outer"
              android:paddingTop="@dimen/thread_inner"
              android:maxLines="1"
              android:layout_gravity="right"
              android:gravity="right"
              android:textSize="@dimen/thread_chats"
              />

    <ImageView android:id="@+id/thread_list_item_adult"
            android:layout_width="@dimen/thread_icon"
            android:layout_height="@dimen/thread_icon"
            android:layout_marginBottom="@dimen/thread_icon_outer"
            android:layout_marginRight="@dimen/thread_outer"
            android:layout_gravity="right|bottom"
            android:src="@drawable/heart"
            />

    <TextView android:id="@+id/thread_list_item_chats"
              android:layout_width="@dimen/thread_right_minus_icon"
              android:layout_height="@dimen/thread_half"
              android:layout_marginRight="@dimen/thread_icon_outer"
              android:paddingRight="@dimen/thread_inner"
              android:paddingBottom="@dimen/thread_inner"
              android:maxLines="1"
              android:layout_gravity="right|bottom"
              android:gravity="right|bottom"
              android:textSize="@dimen/thread_chats"
            />

    <ImageView android:id="@+id/thread_list_item_icon"
               android:layout_width="@dimen/thread_icon"
               android:layout_height="@dimen/thread_icon"
               android:layout_marginBottom="@dimen/thread_inner"
               android:layout_marginRight="@dimen/thread_outer"
               android:layout_gravity="right|bottom"
               android:src="@drawable/speech_bubble"
            />

</FrameLayout>
